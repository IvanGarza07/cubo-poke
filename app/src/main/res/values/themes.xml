<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cubo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/purple_500</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.NoActionBarMaterial" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="SquareButtonTheme" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/purple_500</item>
        <item name="colorControlHighlight">@color/purple_700</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RoundOKButtonTheme" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/purple_500</item>
        <item name="colorControlHighlight">@color/purple_500</item>
        <item name="android:background">@drawable/background_circle_button_ok</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="RoundCancelButtonTheme" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:background">@drawable/background_circle_button_cancel</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerRadius" parent="">
        <item name="cornerSize">5dp</item>
    </style>
</resources>